{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext", 
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"declaration": false,
		"declarationMap": false,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"]
		},
		"lib": [
			"ES2020",
			"ES2017",
			"ES2015",
			"DOM",
			"DOM.Iterable"
		]
	},
	"include": [
		"**/*.ts",
		"**/*.tsx", 
		"**/*.vue",
		"types/**/*.d.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		"platforms"
	],
	"vueCompilerOptions": {
		"target": 3.0
	}
} 